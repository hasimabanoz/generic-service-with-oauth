	<artifactId>generic-service-with-oauth-backend</artifactId>
	<packaging>war</packaging>

	<name>generic-service-with-oauth-backend</name>
	<description>generic-service-with-oauth backend project</description>

	<parent>
		<groupId>tr.com.j32bit</groupId>
		<artifactId>generic-service-with-oauth</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<java.version>1.8</java.version>
	</properties>

	<dependencies>
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-log4j2</artifactId>
		</dependency>

		<dependency>
